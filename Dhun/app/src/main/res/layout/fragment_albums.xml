<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/dimen_8dp"
    tools:context=".fragments.AlbumsFragment">

    <GridView
        android:id="@+id/albums_grid_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/dimen_4dp"
        android:background="@color/colorAlbumFragmentBackground"
        android:gravity="center"
        android:horizontalSpacing="@dimen/dimen_8dp"
        android:numColumns="auto_fit"
        android:scrollbars="vertical"
        android:stretchMode="columnWidth"
        android:verticalSpacing="@dimen/dimen_8dp" />

</FrameLayout>
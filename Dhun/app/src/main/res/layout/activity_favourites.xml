<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorFavoritesActivitiyBackground"
    tools:context=".activities.FavouritesActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/view_all_songs_button"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/dimen_8dp"
        android:padding="@dimen/dimen_8dp"
        android:text="@string/favourites_will_appear_here_text_view"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/view_all_songs_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/colorAccent"
        android:padding="@dimen/dimen_8dp"
        android:text="@string/view_all_songs_button"
        android:textColor="@android:color/white" />

</RelativeLayout>